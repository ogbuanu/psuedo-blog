<!DOCTYPE html>
<html lang="en">
<%- include("../../partials/head.ejs", {title: "Register"})  %> 
<body>
    <div class="container p-5">
        <h1 class="h1 text-center">Register Here</h1>
        <% if (message == "alreadyExist") { %>
         <span class="text-danger">username already exist</span>
        <% } %>
        <form method="post" class="bg-dark p-3">
            <div class="mb-3">
                <label for="username" class="form-label text-light">Username</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Enter username">
              </div>
              <div class="mb-3">
                <label for="email" class="form-label text-light">Email address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
              </div>
              <div class="mb-3">
                <label for="Password" class="form-label text-light">Password</label>
                <input type="password" class="form-control" id="Password" name="password" placeholder="Enter Password">
              </div>
              <% if (errors) { %>
               <% errors.forEach(error => { %>
                <span class="text-danger"><%= error.param %>: <%= error.msg %>  </span> <br> <br>
               <% }) %>
              <% } %>
              <button type="submit" class="btn btn-light"> Submit</button>
              <p class="text-light">Already registered? click <a href="/auth/login">here</a> to login</p>
        </form>
    </div>
    
</body>
</html>