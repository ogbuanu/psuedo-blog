<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs", {title: "Home"})  %> 
	<body style="overflow: hidden;">
	<div class="container-fluid bg-light overflow-hidden" style="overflow: hidden;">
  <%- include("./partials/navbar.ejs")  %> 
    <!-- <div class="container"> -->
		<div class="row justify-content-center bg-light  post-area ">
      <div class="col-sm-12 col-md-8 col-lg-8"  style="overflow-y: scroll; height: 90vh;">
				 

			<!-- ------------------------ -->
										 <!-- card start -->
   <% if (posts.length) { %>
    <% posts.forEach(post => { %>
      <div class="card p-2 pb-0 mt-4">
        <div class="card-header p-1 post-title"><%= post.title %> </div>
        <div class="card-body p-1">
          <blockquote class="blockquote mb-0 p-1 ">
            <% if (post.body.length > 50) { %>
              <a href="/viewpost/<%= post.id %>" class="p text-dark">
                <p><%= post.body.substring(0, 50) %>...  </p>
              </a>
              <% } else { %>
                <a href="/viewpost/<%= post.id %>" class="p text-dark">
                  <p><%= post.body %></p>

                </a>
            <% } %>
            <footer class="blockquote-footer post-data"><%= post.createdAt.toString() %> <cite title="Source Title post-ownner"> <%= post.owner.username %> </cite></footer>
          </blockquote>
        </div>
        <!-- end of post -->

 </div> 
    <% }) %>
   <% } %>

		
      </div>

