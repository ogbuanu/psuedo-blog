          <div class=" p-3 fs-3 text-light m-1 bg-dark display-5" > Sport</div>
					
        </div> -->
				<!-- end of category -->			
		</div>
 
	</div>

	
		<!-- Latest compiled JavaScript -->
<%- include("./partials/foot.ejs")  %> 
	</body>
</html>
